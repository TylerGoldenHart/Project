@page "/project"
<h1>Project</h1>

<p>This component demonstrates averaging 3 numbers</p>

<div class="form-group">
    <label for="num1">Number 1</label>
    <input type="number" class="form-control" id="num1" @bind="num1">
</div>
<div class="form-group">
    <label for="num2">Number 2</label>
    <input type="number" class="form-control" id="num2"  @bind="num2">
</div>
<div class="form-group">
    <label for="num3">Number 3</label>
    <input type="number" class="form-control" id="num3"  @bind="num2">
</div>
<div class="form-group">
    <label><b>Average: </b>@avg</label> 
</div>
 
<button class="btn btn-primary" @onclick="DoAverage">Average</button>

